{
  "pluginAlias": "HomebridgeSpotify",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "HomebridgeSpotify"
      },
      "spotifyClientId": {
        "title": "Spotify Client ID",
        "type": "string",
        "required": true
      },
      "spotifyClientSecret": {
        "title": "Spotify Client Secret",
        "type": "string",
        "required": true
      },
      "spotifyAuthCode": {
        "title": "Spotify Auth Code",
        "type": "string",
        "required": true
      },
      "devices": {
        "type": "array",
        "items": {
          "title": "Device",
          "type": "object",
          "properties": {
            "deviceName": {
              "title": "Device Name",
              "description": "Friendly device name that will be displayed in Homekit.",
              "type": "string",
              "required": true
            },
            "spotifyDeviceId": {
              "title": "Spotify Device ID",
              "description": "The Spotify Device ID. You can find a list of available device in the plugin's logs when it starts or see the README",
              "type": "string",
              "required": true
            },
            "spotifyPlaylistId": {
              "title": "Spotify Playlist ID",
              "description": "The ID of the Spotify playlist that you want to play when this device will be set to ON in Homekit.",
              "type": "string",
              "required": true
            }
          }
        } 
      }
    }
  }
}